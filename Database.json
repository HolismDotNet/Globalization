{
    "name": "Globalization",
    "tables": [
        {
            "name": "Locales",
            "columns": [
                {
                    "name": "Key",
                    "unique": true
                },
                {
                    "name": "LocalKey",
                    "unique": true
                },
                {
                    "name": "IsRtl",
                    "type": "boolean",
                    "nullable": true
                },
                {
                    "name": "IsActive",
                    "type": "boolean",
                    "hasDefault": true,
                    "defaultSqlText": "1"
                },
                {
                    "name": "CountryGuid",
                    "nullable": true
                },
                {
                    "name": "TimeZoneIdentifier",
                    "nullable": true
                }
            ]
        },
        {
            "name": "Texts",
            "columns": [
                {
                    "name": "Key",
                    "unique": true
                },
                {
                    "name": "OriginalText",
                    "unique": true
                }
            ]
        },
        {
            "name": "Translations",
            "columns": [
                {
                    "name": "TextId"
                },
                {
                    "name": "LocaleId"
                },
                {
                    "name": "Value"
                }
            ],
            "indexes": [
                {
                    "columns": [
                        "TextId",
                        "LocaleId"
                    ],
                    "unique": true
                }
            ]
        }
    ],
    "views": [
        {
            "name": "TranslationViews",
            "query": [
                "select",
                "    Translations.Id,",
                "    Translations.TextId,",
                "    Translations.LocaleId,",
                "    Translations.Value,",
                "    Texts.`Key` as TextKey,",
                "    Locales.`Key` as Locale",
                "from Translations",
                "inner join Texts",
                "on Translations.TextId = Texts.Id",
                "inner join Locales",
                "on Translations.LocaleId = Locales.Id"
            ]
        }
    ]
}